<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background_modern"
    android:padding="12dp">

    <!-- Header piÃ¹ grande e piÃ¹ tappabile -->
    <LinearLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_fuel" />

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FuelFinder"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <LinearLayout
            android:id="@+id/widget_sort_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/widget_sort_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Distanza"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_sort"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Spacer compatibile con RemoteViews -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/widget_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:38"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginEnd="6dp" />

        <ImageView
            android:id="@+id/widget_refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_refresh"
            android:layout_marginStart="6dp"
            android:padding="6dp" />
    </LinearLayout>

    <!-- Contenitore stazioni -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Stazione 1 -->
        <LinearLayout
            android:id="@+id/station_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/station_1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stazione"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/station_1_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¬0,000"
                        android:textSize="13sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/station_1_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0,0 km"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/station_1_navigate"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_navigation"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Stazione 2 -->
        <LinearLayout
            android:id="@+id/station_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/station_2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stazione"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/station_2_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¬0,000"
                        android:textSize="13sp"
                        android:textColor="#FF6F00"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/station_2_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0,0 km"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/station_2_navigate"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_navigation"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Stazione 3 -->
        <LinearLayout
            android:id="@+id/station_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/station_3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stazione"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/station_3_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¬0,000"
                        android:textSize="13sp"
                        android:textColor="#F44336"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/station_3_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0,0 km"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/station_3_navigate"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_navigation"
                android:padding="4dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Messaggio vuoto -->
    <TextView
        android:id="@+id/widget_empty_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Nessun distributore trovato"
        android:textSize="13sp"
        android:textColor="#757575"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
